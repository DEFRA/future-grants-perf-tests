{
    "type": "module",
    "devDependencies": {
        "@wdio/cli": "^9.23.0",
        "@wdio/local-runner": "^9.23.0",
        "@wdio/mocha-framework": "^9.23.0",
        "@wdio/spec-reporter": "^9.20.0",
        "@wdio/visual-service": "^9.1.0",
        "chromedriver": "^143.0.4"
    },
    "scripts": {
        "wdio": "wdio run wdio.conf.js",
        "entra-login": "PATH=\"$PWD/node_modules/chromedriver/lib/chromedriver:$PATH\" wdio run wdio.entra.conf.js",
